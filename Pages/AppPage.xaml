<Page
    x:Class="moonlight_xbox_dx.AppPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:moonlight_xbox_dx"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <CommandBar OverflowButtonVisibility="Collapsed">
            <CommandBar.Content>
                <TextBlock Text="{x:Bind Host.LastHostname}" VerticalAlignment="Center"></TextBlock>
            </CommandBar.Content>
            <AppBarButton Icon="Setting"></AppBarButton>
        </CommandBar>
        <GridView Padding="16" ItemsSource="{x:Bind Apps}"  IsItemClickEnabled="True" Name="AppsGrid" ItemClick="AppsGrid_ItemClick">
            <GridView.ItemTemplate>
                <DataTemplate x:DataType="local:MoonlightApp">
                    <StackPanel>
                        <Canvas Width="256" Height="256"/> 
                        <TextBlock Text="{x:Bind Name}"></TextBlock>
                    </StackPanel>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>
    </Grid>
</Page>
